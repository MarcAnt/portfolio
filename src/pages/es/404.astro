---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <div class={"h-full w-auto flex flex-col items-center "}>
    <span class="text-9xl text-textMessage">404</span>
    <span class="text-3xl text-center text-text dark:text-textLight"
      >Parece que nos perdimos un poco</span
    >

    <a
      href="/"
      class="flex my-5 drop-shadow-2xl items-center text-textDark dark:text-textLight"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="transform -rotate-90"
        width="20"
        viewBox="0 0 24 24"
      >
        <path
          fill="currentColor"
          d="M6.189 17.289L5.5 16.6L15.58 6.5H6.289v-1h11v11h-1V7.208z"></path>
      </svg>
      Volver al inicio
