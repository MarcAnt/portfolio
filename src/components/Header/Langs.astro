---
import { getRelativeLocaleUrl } from "astro:i18n";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const asPath = Astro.url.pathname;
const isSpanish = asPath.includes("es");
const isAbout = Astro.url.pathname.includes("about");
---

<div class="flex flex-col">
  <a
    href={getRelativeLocaleUrl("en", isAbout ? "/about" : "")}
    title={t("translation.option.english")}
    class={`block px-3 py-2 md:py-1 font-bold text-[0.75rem] text-textLight transition-all duration-300 hover:ease-in-out ${isSpanish ? "bg-opacity-5 hover:bg-langLink/40" : "bg-langLink hover:bg-langLink/60"}  md:rounded-tr-lg`}
    >Eng</a
  >
  <a
    title={t("translation.option.spanish")}
    href={getRelativeLocaleUrl("es", isAbout ? "/about" : "")}
    class={`block px-3 py-2 md:py-1 font-bold text-[0.75rem] text-textLight transition-all duration-300 hover:ease-in-out  ${!isSpanish ? "bg-opacity-5 hover:bg-langLink/40" : "bg-langLink hover:bg-langLink/60"}  md:rounded-br-lg`}
    >Esp</a
  >
</div>
