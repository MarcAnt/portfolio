---
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import ClorianReview from "../../assets/review-clorian.webp";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<h3
  class="text-textDark dark:text-textLight font-bold text-base md:text-xl text-center mt-3 md:my-5 flex items-center justify-center rounded-md w-full"
>
  {t("section.reviews.title")}
</h3>

<div class="max-w-[90%] mx-auto my-10 grid grid-cols-1 md:grid-cols-2">
  <figure class="bg-lightCard dark:bg-navigation rounded-md p-3 shadow-inner">
    <Image
      src={ClorianReview}
      alt={"A review from Clorian job"}
      class={"w-full"}
      loading={"lazy"}
    />

    {
      lang === "en" ? (
        <figcaption class="text-textDark dark:text-textLight italic text-[0.8rem] py-2">
          <span class="font-bold">Translation: </span>"I had the pleasure of
          working with Marcos on a project. He is a person who involves very
          well in his assigned tasks and cares about achieving the objectives of
          the project and contributes greatly in improving it."
        </figcaption>
      ) : null
    }
  </figure>
</div>
